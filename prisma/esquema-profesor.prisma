// prisma/esquema-profesor.prisma:
generator profesorClient {
  provider = "prisma-client-js"
  //output   = "./generated/profesor"
  output   = "../node_modules/@prisma/client-profesor"
}

datasource dbProfesor {
  provider = "postgresql"
}

//   MODELOS PROFESOR / TITULO
// Modelo del Profesor:
model Profesor {
  id             Int      @id @default(autoincrement())
  nombres        String
  apellidos      String
  email          String   @unique
  telefono       String?
  activo         Boolean  @default(true)
  creadoEn       DateTime @default(now())
  actualizadoEn  DateTime @updatedAt
  titulos        Titulo[]
  tiempoCompleto Boolean  @default(false) 
}

model Titulo {
  id            Int      @id @default(autoincrement())
  nombre        String 
  institucion   String?
  anioObtencion Int?
  profesorId    Int
  profesor      Profesor @relation(fields: [profesorId], references: [id])
}
